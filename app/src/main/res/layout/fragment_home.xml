<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pet_app_logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_home"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/baseline_notifications_none_24"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar"
        android:scrollbars="none"
        tools:ignore="ScrollViewCount">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pet_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Thú cưng của bạn"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pet_list_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <ImageView
                        android:id="@+id/no_pet_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/no_pet_image"
                        android:scaleType="fitXY"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pet_section"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_redirect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:text="Thiết lập lịch"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:src="@drawable/baseline_keyboard_arrow_right_24"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/care_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/feed_icon"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Chăm sóc"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/inject_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/vaccine"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/inject_icon"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Tiêm"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/schedule_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_section"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:text="Lịch và sự kiện"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:src="@drawable/baseline_keyboard_arrow_right_24"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/schedule_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <HorizontalScrollView
                    android:id="@+id/months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 1"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="true"
                            android:text="Tháng 2"
                            android:textAllCaps="false"
                            android:textColor="@color/orange"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 3"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 4"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 5"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 6"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 7"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 8"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 9"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 10"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 11"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/month_button"
                            android:enabled="false"
                            android:text="Tháng 12"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            tools:ignore="ButtonStyle" />

                    </LinearLayout>
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="true"
                            android:text="Thứ 5&#10;1"
                            android:textAllCaps="false"
                            android:textColor="@color/green"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 6&#10;2"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 7&#10;3"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="CN&#10;4"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 2&#10;5"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 3&#10;6"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 4&#10;7"
                            android:textAllCaps="false"
                            android:textSize="22sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/day_button"
                            android:enabled="false"
                            android:text="Thứ 5&#10;8"
                            android:textAllCaps="false"
                            android:textSize="22sp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appointment_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/schedule_section"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Lịch hẹn"
                        android:textColor="@color/green"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/appointment_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/no_appointment_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/no_appointment_image"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_section"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Nhắc nhở"
                        android:textColor="@color/orange"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reminder_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/no_reminder_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/no_reminder_image"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>