<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".activity.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            app:title="Trang chủ"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <ScrollView
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:layout_below="@id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.viewpager2.widget.ViewPager2
                    android:paddingTop="15dp"
                    android:id="@+id/slider_viewpager2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>
                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/circle_indicator"
                    android:layout_gravity="center_horizontal"
                    app:ci_drawable="@drawable/bg_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:alpha="0.6"
                    android:text="Chức năng"
                    android:paddingBottom="10dp"
                    />
                <TableLayout
                    android:stretchColumns="*"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp">
                    <TableRow android:padding="5dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"

                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow android:padding="5dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            >
                            <ImageButton
                                android:layout_gravity="center_horizontal"

                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/backgroud_login"
                                />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pet shop"
                                />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:alpha="0.6"
                    android:text="Thú cưng của bạn"
                    android:paddingBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_pet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:alpha="0.6"
                    android:text="Lịch hẹn"
                    android:paddingBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:alpha="0.6"
                    android:text="Tin tức"
                    android:paddingBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_tintuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>