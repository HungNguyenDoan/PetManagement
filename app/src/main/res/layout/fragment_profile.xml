<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pet_app_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_profile"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:src="@drawable/baseline_create_24_1"
                tools:ignore="ContentDescription" />
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/avatar_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tool_bar">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:alpha="0.4"
                android:background="@drawable/gray_pet_image"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/avatar"
                android:layout_alignBottom="@id/avatar"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.65"
                android:scaleX="1.4"
                android:scaleY="1.4"
                android:src="@drawable/round_camera_alt_24"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/avatar_background"
            android:background="@color/white"
            android:scrollbars="vertical"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KienDo"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+84 963 xxx xxx"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/redirect_to_shop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:scaleX="0.55"
                        android:scaleY="0.55"
                        android:src="@drawable/more_icon"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:scrollbars="none"
                    tools:ignore="NestedScrolling">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pet_card_view"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <!--                            <LinearLayout-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:background="@color/green"-->
                            <!--                                android:orientation="vertical">-->

                            <!--                                <ImageView-->
                            <!--                                    android:id="@+id/horizontal_item_image"-->
                            <!--                                    android:layout_width="40dp"-->
                            <!--                                    android:layout_height="40dp"-->
                            <!--                                    android:layout_gravity="center_horizontal"-->
                            <!--                                    android:layout_marginTop="5dp"-->
                            <!--                                    android:scaleX="0.75"-->
                            <!--                                    android:scaleY="0.75"-->
                            <!--                                    android:src="@drawable/pet_icon" />-->

                            <!--                                <TextView-->
                            <!--                                    android:id="@+id/horizontal_item_title"-->
                            <!--                                    android:layout_width="match_parent"-->
                            <!--                                    android:layout_height="match_parent"-->
                            <!--                                    android:gravity="center"-->
                            <!--                                    android:text="Pet"-->
                            <!--                                    android:textColor="@color/white"-->
                            <!--                                    android:textSize="16sp"-->
                            <!--                                    android:textStyle="bold" />-->
                            <!--                            </LinearLayout>-->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pet_icon_2"
                                tools:ignore="ContentDescription" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/device_card_view"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="0dp">

                            <!--                            <LinearLayout-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:background="@color/green"-->
                            <!--                                android:orientation="vertical">-->

                            <!--                                <ImageView-->
                            <!--                                    android:id="@+id/horizontal_item_image1"-->
                            <!--                                    android:layout_width="40dp"-->
                            <!--                                    android:layout_height="40dp"-->
                            <!--                                    android:layout_gravity="center_horizontal"-->
                            <!--                                    android:layout_marginTop="5dp"-->
                            <!--                                    android:scaleX="0.75"-->
                            <!--                                    android:scaleY="0.75"-->
                            <!--                                    android:src="@drawable/pet_icon" />-->

                            <!--                                <TextView-->
                            <!--                                    android:id="@+id/horizontal_item_title1"-->
                            <!--                                    android:layout_width="match_parent"-->
                            <!--                                    android:layout_height="match_parent"-->
                            <!--                                    android:gravity="center"-->
                            <!--                                    android:text="Pet"-->
                            <!--                                    android:textColor="@color/white"-->
                            <!--                                    android:textSize="16sp"-->
                            <!--                                    android:textStyle="bold" />-->
                            <!--                            </LinearLayout>-->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/device_icon"
                                tools:ignore="ContentDescription" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    tools:ignore="NestedScrolling">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/security_privacy_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/security_privacy_item_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/security_icon"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/security_privacy_item_title"
                                    android:layout_width="260dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20dp"
                                    android:gravity="center_vertical"
                                    android:text="Bảo mật và quyền riêng tư"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:id="@+id/redirect_to_security_privacy"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="center"
                                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/setting_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/setting_item_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/setting_icon"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/setting_item_title"
                                    android:layout_width="260dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20dp"
                                    android:gravity="center_vertical"
                                    android:text="Cài đặt"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:id="@+id/redirect_to_setting"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:scaleType="center"
                                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/delete_account_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/delete_account_item_image"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/bin_icon"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/delete_account_item_title"
                                    android:layout_width="260dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="20dp"
                                    android:gravity="center_vertical"
                                    android:text="Xóa tài khoản"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:id="@+id/redirect_to_delete_account"
                                    android:layout_width="40dp"
                                    android:layout_height="50dp"
                                    android:scaleType="center"
                                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/green_background_button"
                    android:gravity="center"
                    android:text="Đăng xuất"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:gravity="center"
                    android:text="PetApp v1.0.0"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>