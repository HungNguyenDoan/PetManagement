<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.statichealth.StaticHealthDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_marginStart="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/baseline_arrow_back_ios_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:text="Thêm báo cáo sức khỏe"
            />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cân nặng thú cưng của bạn là bao nhiêu kg?"
            android:textSize="16sp"
            android:textColor="@color/black"
            />
        <EditText
            android:focusable="false"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/weight"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_search"
            android:text="20"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:paddingVertical="8sp"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            style="@style/InPutTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức độ tập thể dục"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                />
            <Spinner
                android:id="@+id/exercise_level"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_static_health"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kiểm tra"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginVertical="15dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_input_static_health"
            android:hint="Ngày"
            android:padding="12dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_static_health"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_date_range_24"
                android:text="28/02/2024"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginVertical="15dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_input_static_health"
            android:hint="Ghi chú"
            android:padding="12dp"
            android:layout_height="120dp">
            <com.google.android.material.textfield.TextInputEditText
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_static_health"
                android:textSize="16sp"
                android:text="Cần tập thể dục chăm chỉ hơn"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</RelativeLayout>